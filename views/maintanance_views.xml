<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="Maintanance_view_form" model="ir.ui.view">
        <field name="name">Maintanance.form</field>
        <field name="model">property.maintanance</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"
                        statusbar_visible="pending, in_progress, done" />

                    <button name="action_start" string="Start" type="object"
                        invisible='state != "pending"' />
                    <button name="action_done" string="Complete" type="object"
                        invisible='state != "in_progress"' />
                </header>

                <sheet>
                    <group>

                        <field name="name" string="Name" />
                        <field name="maintenance_type" string="Type" />
                        <field name="cost" string="Cost" />
                    </group>
                    <group>
                        
                        <field name="start_date" string="Start Date" />
                        <field name="duration" string="Duration" />                        
                    </group>
                    <group>
                        <field name="property_id" />
                        <field name="description" string="Description" />
                    </group>
                    <notebook>
                        <page string="Tasks">
                            <field name="task_ids">
                                <tree class="header_custom" decoration-success="(state == 'done')" decoration-warning="(state == 'in_progress')">
                                    <field name="name" />
                                    <field name="state" />
                                    <field name="duration" />
                                    <field name="personnel_id" widget="many2many_tags"/>
                                </tree>
                            </field> 
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="Maintanance_tree" model="ir.actions.act_window">
        <field name="name">Maintanance Tree</field>
        <field name="res_model">property.maintanance</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="Maintanance_details_view_form" model="ir.ui.view">
        <field name="name">Maintanance.form</field>
        <field name="model">property.maintanance.request</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <group>

                        <field name="name" string="Name" />
                        <field name="maintenance_type" string="Type" />
                        <field name="description" string="Description" />
                    </group>
                </sheet>
                <footer>
                    <!-- id="create_invoice_open" -->
                    <button name="action_request" type="object"
                        string="Submit Request"
                        class="btn-primary" data-hotkey="q" />
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x" />
                </footer>
            </form>
        </field>
    </record>

    <record id="Maintanance_the_wizard" model="ir.actions.act_window">
        <field name="name">Maintanance Request</field>
        <field name="res_model">property.maintanance.request</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="Maintanance_details_view_form"></field>
        <field name="target">new</field>
    </record>
</odoo>