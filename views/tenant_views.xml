<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="tenant_view_tree" model="ir.ui.view">
        <field name="name">Tenant.tree</field>
        <field name="model">tenant</field>
        <field name="arch" type="xml">
            <tree >
                <field name="name"/>
                <field name="contact_information"/>
                <field name="monthly_rent"/>
                <field name="lease_start_date" optional="hide"/>
                <field name="lease_end_date" optional="hide"/>
    
            </tree>
        </field>
      </record>

      <record id="tenant_view_kanban" model="ir.ui.view">
        <field name="name">Tenant.kanban</field>
        <field name="model">tenant</field>
        <field name="arch" type="xml">
            <kanban >
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <h1>
                                <field name="name"/>
                            </h1>
                            <p><field name="contact_information"/></p>
                            <p><field name="monthly_rent"/>$</p>
                            <p>from: <field name="lease_start_date"/> to: <field name="lease_end_date"/></p>
                        </div>
                    </t>
                </templates>
    
            </kanban>
        </field>
      </record>
    
      <record id="tenant_action" model="ir.actions.act_window">
            <field name="name">Tenants action</field>
            <field name="res_model">tenant</field>
            <field name="view_mode">tree,form,kanban</field>
          </record>
          
          
</odoo>