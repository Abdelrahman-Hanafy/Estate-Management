<?xml version="1.0" encoding="UTF-8"?>

<odoo>


  <record id="property_view_search" model="ir.ui.view">
    <field name="name">Property.search</field>
    <field name="model">property</field>
    <field name="arch" type="xml">
      <search>
        <filter name="residential_property_filter" string="residential"
          domain="[('property_type', '=', 'residential')]" />
        <separator />
        <filter name="cheap_property_filter" string="&gt; 10K$" domain="[('price', '&gt;=', 10000)]" />
        <filter name="cheap_property_filter" string="&lt; 50K$" domain="[('price', '&lt;=', 50000)]" />
      </search>
    </field>
  </record>

  <record id="property_view_tree" model="ir.ui.view">
    <field name="name">Property.tree</field>
    <field name="model">property</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="property_type" />
        <field name="price" />
        <field name="state" />
        <field name="availability_date" />

        <field name='address' optional='hide' />
        <field name='size' optional='hide' />
        <field name='description' optional='hide' />
        <field name='owners' optional='hide' />
        <field name='tenant' optional='hide' />
      </tree>
    </field>
  </record>

  <record id="property_view_form" model="ir.ui.view">
    <field name="name">Property.form</field>
    <field name="model">property</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="mark_Available" type="object" string="Available" />
          <button name="mark_Rented" type="object" string="Rented" />
          <button name="mark_Under_Maintenance" type="object" string="Under Maintenance" />

        </header>
        <sheet>
          <h1>
            <field name="name" string="Name" />
          </h1>
          <field name="state" readonly='1' />
          <group>

            <group>
              <group>
                <field name="property_type" widget="radio" />
                <field name="availability_date" />
                <field name="price" />
              </group>

              <group>
                <field name='address' />
                <field name='width' />
                <field name='height' />
                <field name='size' />
              </group>
            </group>
            <group>

              <field name='owners' widget="many2many_tags" options="{'no_create': True}" />
              <field name='tenant' />
            </group>

            <notebook>
              <page string="Description">
                <group>
                  <field name="description" />
                  <field name="bedrooms" />
                  <field name="facades" />
                  <field name="living_area" />
                  <field name="garage" />

                  <field name="garden" />
                  <field name="garden_area" invisible="not garden" />
                  <field name="garden_orientation" widget="radio" options="{'horizontal': true}"
                    invisible="not garden" />

                </group>
              </page>
              <page string="offers">
                <group>
                  <field name="offers" widget="one2many_list">
                    <tree>
                      <field name="partner_id" />
                      <field name="price" />
                      <field name="state" />

                    </tree>
                  </field>
                </group>
              </page>
            </notebook>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="property_action" model="ir.actions.act_window">
    <field name="name">Property action</field>
    <field name="res_model">property</field>
    <field name="view_mode">tree,form</field>
  </record>


</odoo>