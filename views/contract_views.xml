            <calendar string="Contracts" create="0" mode="month" quick_create="0">
                <field name="name" />
                <field name="duration" />
            </calendar>
        </field>
    </record> -->

    <record id="contract_management_action" model="ir.actions.act_window">
        <!-- Name of the action -->
        <field name="name">Contract Management action</field>
        <!-- Model for the action -->
        <field name="res_model">estate.contract.management</field>
        <!-- View modes for the action -->
        <field name="view_mode">tree,form,calendar</field>
    </record>

    <record id="contract_management_clause_action" model="ir.actions.act_window">
        <!-- Name of the action -->
        <field name="name">Contract Management action</field>
        <!-- Model for the action -->
        <field name="res_model">estate.contract.management.clause</field>
        <!-- View modes for the action -->
        <field name="view_mode">tree,form</field>
    </record>
</odoo>