<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="contract_management_view_form" model="ir.ui.view">
        <field name="name">Contract Management.form</field>
        <field name="model">estate.contract.management</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <group>

                            <field name="name" string="Name" readonly='1' />
                        </group>
                    </h1>
                    <group>
                        <group>
                            <field name="offer_id" string="Offer" readonly='1' />

                        </group>
                        <group>
                            <field name="start_date" string="Start Date" />
                            <field name="duration" string="Duration" />
                            <field name="end_date" string="End Date" />

                        </group>
                    </group>
                    <notebook>
                        <page string="Standard Clauses ">
                            <field name="clauses_ids" widget="one2many_list">
                                <tree>

                                    <field name="description" />
                                </tree>

                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

